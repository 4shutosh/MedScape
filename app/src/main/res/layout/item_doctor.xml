<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:backgroundTint="@color/grey_300"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/twentyDp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tenDp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/tenDp"
                android:layout_marginVertical="@dimen/fiveDp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/tenDp"
                android:layout_marginBottom="@dimen/fiveDp"
                android:textColor="@color/grey_800"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/tenDp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/tenDp"
                android:layout_marginVertical="@dimen/tenDp"
                android:src="@drawable/ic_baseline_phone_24"
                android:textColor="@color/grey_800"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>